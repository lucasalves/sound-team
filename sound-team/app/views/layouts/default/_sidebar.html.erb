<div id="nav"  ng-controller="SidebarController"> 
  <ul class="navigation">
    <li>
      <a class="<%= menu_item_is_activated?(dashboard_path) %>" href="<%= dashboard_path %>">
        <i class="fa fa-home"></i>
        <span>Dashboard</span>
      </a>
    </li>
    <li ng-repeat="item in menuItems">
      <a href="{{item.path}}">
        <i class="fa fa-{{item.icon}} nav-icon"></i>
        <span>{{item.name}}</span>
      </a>
    </li>
  </ul>
</div>