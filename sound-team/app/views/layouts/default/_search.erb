<div ng-controller="SearchPage">
  <div class="search-box page-search-full"></div>
  <div class="search-box page-search col-md-12">
    <h1 class="page-header text-overflow pull-left">Pesquisa</h1>

    <span class="close-search" ng-click="close()"><i class="fa fa-times"></i></span>
    <%= form_tag('/media/search', method: 'get') do %>
      <%= 
        text_field_tag(
          :q,
          '',
          {
            class: 'form-control',
            autocomplete: 'off',
            'ng-model' => 'search.q'
          }
        ) 
      %>
    <% end %>
    <div class="row media">
      <div 
        class="item item-image col-md-3 col-lg-3"
        data-media="{{result}}"
        ng-repeat="result in results.data"
      >
        <div class="panel panel-plan">
          <div class="pad-all text-center">
            <div class="media-item" id="media-item-{{result.id}}">
              <a href="/media/{{result.id}}">
                <img alt="{{result.name}}" default="/assets/no-image.png" ng-src="{{loadImage(result)}}">
              </a>
              <h3>
                <a href="/media/{{result.id}}">
                  {{result.name}}
                </a>
              </h3>
              <span class="size"></span>
              <div class="actions-btns btn-group btn-group-xs">
                <button class="btn btn-success add-in-timeline" data-id="{{result.id}}" title="" data-toggle="tooltip" data-original-title="Adicionar na timeline"><i class="fa fa-plus"></i></button>
                <button class="btn btn-info share-now" data-id="{{result.id}}" title="" data-toggle="tooltip" data-original-title="Reproduzir agora"><i class="fa fa-desktop"></i></button>
              </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>